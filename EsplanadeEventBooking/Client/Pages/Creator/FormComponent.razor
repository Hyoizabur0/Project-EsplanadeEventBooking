<h3>FormComponent</h3>

<EditForm Model="@creator" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label>Name:</label>
        <div>
            <InputText @bind-Value="@creator.Name" class="form-control" />
            <ValidationMessage For="@(() => creator.Name)" />
        </div>
        <label>Age:</label>
        <div>
            <InputNumber @bind-Value="@creator.Age" class="form-control" />
            <ValidationMessage For="@(() => creator.Age)" />
        </div>
    </div>
    <button type="submit" class="btn btn-success btn-block">
        Create Creator
    </button>
    <BackToList Target="creators" />
</EditForm>

@code {
    [Parameter] public Creator creator { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
